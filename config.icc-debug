# vim:ft=make
INTEL_COMPILER = yes

# compiler and linker
CXX = mpic++

# general and language options (for preprocessing, compiling and linking)
OPTIONS = -qopenmp -DINTEL_COMPILER -g -Qoption,cpp,--extended_float_types -DDEBUG

# optimization options (only for compiling and linking)
OPTIMIZE = -O0

# use the icc path for ctf
CTF_PATH = lib/build/icc/ctf

# additional library paths and libraries to link to
LIBS += -mkl -lmkl_scalapack_lp64 -lmkl_blacs_intelmpi_lp64
